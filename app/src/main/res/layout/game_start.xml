<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:background="?attr/colorPrimary">
        </androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/gamestart_button"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="問題スタート！！"
            android:background="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="5">

            <Button
                android:id="@+id/tenth_minute_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center"/>
            <Button
                android:id="@+id/first_minute_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="center"/>
            <Button
                android:id="@+id/tenth_second_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_row="0"
                android:gravity="center"/>
            <Button
                android:id="@+id/first_second_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_row="0"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tenth_minute_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="70sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/first_minute_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="70sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_column="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:text=":"
                android:textSize="70sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tenth_second_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_row="1"
                android:textSize="70sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/first_second_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_row="1"
                android:textSize="70sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/tenth_minute_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="center"/>
            <Button
                android:id="@+id/first_minute_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="2"
                android:gravity="center"/>
            <Button
                android:id="@+id/tenth_second_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_row="2"
                android:gravity="center"/>
            <Button
                android:id="@+id/first_second_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_row="2"
                android:gravity="center"/>

        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>